{
	"name": "theme-tomato",
	"displayName": "Theme Tomato",
	"description": "Switch theme with tomato timer",
	"version": "0.2.0",
	"engines": {
		"vscode": "^1.48.0"
	},
	"publisher": "lihechen",
	"icon": "tomato128.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/jenac/theme-tomato"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:theme-tomato.start",
		"onCommand:theme-tomato.stop"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "theme-tomato.start",
				"title": "Theme-tomato:start"
			},
			{
				"command": "theme-tomato.stop",
				"title": "Theme-tomato:stop"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/vscode": "^1.48.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.0.1",
		"ts-loader": "^8.0.3",
		"typescript": "^3.8.3",
		"vscode-test": "^1.4.0",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12"
	}
}
